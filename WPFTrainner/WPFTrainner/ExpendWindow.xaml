<Window x:Class="ExpendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PVZWPFTrainner"
        xmlns:darkstyle="clr-namespace:DarkStyle;assembly=DarkStyle"
        mc:Ignorable="d"
        Title="拓展窗口" Height="400" Width="600" MouseMove="Window_MouseMove" SizeChanged="Window_SizeChanged"
        WindowStyle="None" ResizeMode="NoResize" Loaded="Window_Loaded" Closed="Window_Closed"
        Background="#FF252526" WindowStartupLocation="CenterScreen" >
    <Border BorderThickness="2" BorderBrush="Crimson">
        <Canvas Name="MainCanvas">
            <TextBlock Name="TBTitle" Foreground="White" Text="拓展窗口" FontWeight="Bold" FontSize="20"  Canvas.Left="10" Canvas.Top="10"/>
            <darkstyle:MinimizeButton Canvas.Right="70" Canvas.Top="10"/>
            <darkstyle:CloseButton Canvas.Right="20" Canvas.Top="10"/>
            <TextBlock x:Name="TBSep"  Canvas.Left="10" Canvas.Top="35" Foreground="Crimson" Text="---------------------------------------------------------------------------------------------------------------"/>
            <TextBlock Name="TBEgg" Foreground="#FF3A3A3A" Canvas.Left="10" Canvas.Top="56" />
        </Canvas>
    </Border>
</Window>
